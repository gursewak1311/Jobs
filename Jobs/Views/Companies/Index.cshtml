@model IEnumerable<Jobs.Models.Company>

@{
    ViewData["Title"] = "Companies";
}

<h1>Companies Hiring</h1>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-dark" asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <!--Adding the Company ID stored in table to display in the site-->
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FieldOfWork)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <!--Adding the Company ID stored in table to display in the site-->
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FieldOfWork)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                }
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
